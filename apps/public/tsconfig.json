{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "types": ["vite/client", "vitest/globals"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2022"
  },
  "include": [
    "./app/**/*",
    "./middlewares/**/*",
    "./components/**/*",
    "./utils/**/*",
    "./hooks/**/*",
    "./contexts/**/*",
    "./ui-lib/**/*",
    ".next/types/**/*.ts",
    "./config/**/*",
    "types.d.ts",
    "constants.ts",
    "ui-lib"
  ],
  "exclude": ["node_modules"]
}
